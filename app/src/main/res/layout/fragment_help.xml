<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/area_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/suit_variable"
            android:lineHeight="27sp"
            android:text="정태연님, 어디로 이사 가시나요?"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/searchbar"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_below="@id/textView4"
            android:background="@drawable/search"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textViewInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="11.5dp"
                android:text="장소를 검색해 주세요"
                android:textSize="14sp"
                android:lineSpacingExtra="7sp"
                android:fontFamily="@font/suit_variable"
                android:textColor="#5A5A5A"
                android:textStyle="bold"
                android:fontWeight="600"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_alert"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/searchbar"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_alert" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_alert"
            android:layout_below="@id/searchbar"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="장소와 일정을 입력하면 자동으로 이사를 계획해 드려요"
            android:textSize="12sp"
            android:lineSpacingExtra="6sp"
            android:textColor="#7C7C7C"
            android:fontFamily="@font/suit_variable"
            android:textStyle="normal"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
