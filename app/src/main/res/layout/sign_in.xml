    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_10000_background"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/frame_10000_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text1_2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/suit_semibold"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:text="아직 회원이 아니신가요?"
            android:textAppearance="@style/some_id"
            android:translationY="-1.51sp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButton5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/suit_semibold"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:text="이메일로 가입하기"
            android:textAppearance="@style/some_id"
            android:textColor="#2FACEB"
            android:translationY="-1.51sp"
            app:layout_constraintBottom_toBottomOf="@+id/text1_2"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_right_blue"
            app:layout_constraintBottom_toBottomOf="@id/text2"
            app:layout_constraintEnd_toEndOf="@+id/imageButton5"
            app:layout_constraintTop_toTopOf="@+id/text2" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="Register Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/btn_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

