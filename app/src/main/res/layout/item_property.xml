<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/property_img"
        android:layout_width="120dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/property_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월세 000/00"
        android:textSize="14sp"
        android:fontFamily="@font/suit_variable"
        android:textColor="@color/Gray800"
        android:textStyle="bold"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/property_info_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00m^2"
        android:textSize="12sp"
        android:fontFamily="@font/suit_variable"
        android:textColor="@color/Gray800"
        android:textStyle="bold"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/property_info_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/property_info_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옥탑방"
        android:textSize="12sp"
        android:fontFamily="@font/suit_variable"
        android:textColor="@color/Gray800"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/property_info_1"
        app:layout_constraintStart_toEndOf="@id/property_info_2" />

    <TextView
        android:id="@+id/property_info_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동작구 상도동"
        android:textSize="12sp"
        android:fontFamily="@font/suit_variable"
        android:textColor="@color/Gray800"
        android:textStyle="bold"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/property_info_2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/property_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명을 작성해주세요. 설명을 작성해주..."
        android:textSize="12sp"
        android:fontFamily="@font/suit_variable"
        android:textColor="@color/Gray600"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/property_info_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>